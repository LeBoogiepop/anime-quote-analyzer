# Python Backend Configuration
# Copy this file to .env and fill in your actual values

# AI Provider Configuration (optional)
# Choose one: "openrouter" or "gemini" or leave empty to disable AI explanations
AI_PROVIDER=openrouter

# OpenRouter API (recommended - free tier available)
OPENROUTER_API_KEY=your_openrouter_key_here
AI_MODEL=perplexity/sonar-small-chat

# Google Gemini API (alternative)
GEMINI_API_KEY=your_gemini_key_here

# DeepL Translation API (optional - for better translations)
DEEPL_API_KEY=your_deepl_key_here
DEEPL_API_URL=https://api-free.deepl.com/v2/translate

